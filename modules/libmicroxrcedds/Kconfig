config MICROXRCEDDSCLIENT
    bool "Micro XRCE-DDS Client"
    help
      Enable the Micro XRCE-DDS Client library support.
      This library provides DDS-XRCE protocol implementation
      for microcontroller environments.

if MICROXRCEDDSCLIENT

config MICROXRCEDDSCLIENT_CUSTOM_TRANSPORT
    bool "Use custom transport implementation"
    default y
    help
      Enable custom transport implementation instead of built-in
      UDP, TCP or serial transports.

config MICROXRCEDDSCLIENT_TRANSPORT_MTU
    int "Transport MTU size"
    default 512
    help
      Maximum transmission unit size for the transport layer.

endif # MICROXRCEDDSCLIENT